
@{
    ViewBag.Title = "Registro";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Save", "Empleado", FormMethod.Post))
{
<div class="row">
    <div class="form-group">
        <label for="nombre">Nombre</label>
        <input type="text" name="nombre" required placeholder="Escribe tu Nombre">
    </div>

    <div class="form-group">
        <label for="dui">DUI</label>
        <input type="number" name="dui" required placeholder="Escribe tu DUI">
    </div>

    <div class="form-group">
        <label for="direccion"> Dirección</label>
        <input type="text" name="direccion" required placeholder="Escribe tu dirección">
    </div>

    <div class="form-group">
        <label for="telefono">Teléfono</label>
        <input type="tel" name="telefono" required placeholder="Escribe tu teléfono">
    </div>

    <div class="form-group">
        <label for="correo">Correo</label>
        <input type="email" name="correo" required placeholder="Escribe tu correo">
    </div>

    <div class="form-group">
        <label for="cargo">Cargo</label>
        <input type="text" name="cargo" required placeholder="Escribe tu cargo">
        <input type="submit" button class="btn btn-success">
    </div>
</div>
}

